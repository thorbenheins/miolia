<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

    {% block css %}
        <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Abel:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>

        {% stylesheets  '@AmilioUserBundle/Resources/public/css/*' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets  %}

        {% stylesheets  '../app/Resources/public/css/*' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets  %}
    {% endblock %}

    {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

            {% javascripts '@AmilioCoreBundle/Resources/public/js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% javascripts '@AmilioUserBundle/Resources/public/js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% javascripts '../app/Resources/public/js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

    	    <script src="{{ asset('includes/superfish/js/superfish.js') }}" type="text/javascript"></script>
    	    <script src="{{ asset('includes/simplemodal/jquery.simplemodal.1.4.4.min.js') }}" type="text/javascript"></script>

            <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
            <script type="text/javascript">stLight.options({publisher: "0a8d16ba-5656-4348-8127-fc28018c5509", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>

	    <script src="/includes/isotope/isotope.pkgd.min.js"></script>


	{% endblock %}

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-45980448-3', 'auto');
      ga('send', 'pageview');
    </script>

	<meta property="og:description" content="{% block og_description %}amilio.de - Das soziale Produktnetzwerk{% endblock %}" />
	<meta name="description" content="{% block meta_description %}amilio.de - Das soziale Produktnetzwerk{% endblock %}" />
        <title>{% block title %}amilio - Das soziale Produktnetzwerk{% endblock title %}</title>
    </head>
    <body>

        <div id="wrapper" style="position:absolute; top:0; bottom:0; left:0; right:0;">

            <div id="confirm" style="z-index: 3; display: none; background-color: white; padding: 30px;">
                <p style="padding-bottom: 20px">Wollen Sie dieses Element wirklich l&ouml;schen?</p>
                <button style="margin-right: 10px;" onclick="modalConfirmFunction(); $.modal.close();">Ja</button><button class="simplemodal-close">Nein</button>
            </div>

            <script type="text/javascript">
               var modalConfirmFunction;

               function confirm(callback) {
            	   modalConfirmFunction = callback;
              	   $("#confirm").modal({ opacity:80, overlayCss: {backgroundColor:"#000"}});
               }
            </script>

            <header>
                {% include 'header.html.twig' %}

        		<div id="submenu">
            		<div class="content" style="text-align: left">
                    	{% block submenu %}{% endblock %}
            		</div>
        		</div>
    	    </header>

        	<div style="padding-top: 75px; min-height: calc(100% - 386px)">
                {% block body %}
                {% endblock body %}
        	</div>

        	<div id="modalDialog">
        	    <div style="text-align: right; font-size: 12px"><a href="javascript:$.modal.close()">Fenster schlie&szlig;en</a></div>
    	        <div id="modalDialogContent"></div>
           </div>

            <footer>
                <div id="footer_main" class="center">
                    <img alt="amilio-Logo" src="/images/footer_logo.png" style="position: relative; top: -26px">
    		<div style="padding: 20px;">
    			<ul style="padding: 0; margin: 0; list-style: none">
    				<li style="padding: 0; margin: 0;"><a style="color: white" href="{{ path( 'amilio_core_static_show', { blogurl: "disclaimer"  }) }}">Disclaimer</a></li>
    			</ul>
    		</div>
                </div>
                <div id="footer_sub" class="center">
                    Impressum: Nils Langner | Quellenweg 4 | 20535 Hamburg | nils.langner@phmlabs.com
                </div>
            </footer>

            {% include 'javascript-init.html.twig' %}

    </body>

</html>
