<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        {% block css %}
            <link href='/css/amilio.css' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'>      
            <link href='http://fonts.googleapis.com/css?family=Abel:400,700' rel='stylesheet' type='text/css'>      
            <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>  
            <link href='/css/menu.css' rel="stylesheet" media="screen">  
            
            <link href='/includes/cropper/cropper.css' rel="stylesheet" media="screen">
            
            {% stylesheets  '@AmilioUserBundle/Resources/public/css/*' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets  %}      
        {% endblock %}
        
        {% block javascripts %}
            {% javascripts 'js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
                        
            {% javascripts '@AmilioUserBundle/Resources/public/js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}                        
                        
            <script src="/includes/superfish/js/superfish.js"></script> 
            <script src="/includes/simplemodal/jquery.simplemodal.1.4.4.min.js"></script>
        {% endblock %}

        <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
        <script type="text/javascript">stLight.options({publisher: "0a8d16ba-5656-4348-8127-fc28018c5509", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
 
        <title>{% block title %}amilio.de{% endblock title %}</title>
    </head>
    <body>
        <header>
            <div class="menu">
                <div class="content">
                    <div id="menu_navigation">
                        <a href="{{ path('amilio_core_homepage') }}"><img src="/images/menulogo.png" id="menu_logo" /></a>
                        <ul>
                            <li>
                                &Uuml;ber uns
                            </li>
                            <li>  
                                Blog
                            </li>
                            <li>
                                Premiumkan&auml;le
                            </li>
                            <li>
                                <a href="{{ path('amilio_core_channel_hottest') }}">Nutzerkan&auml;le</a>
                            </li>
                        </ul>
                    </div>
                    <div id="menu_user">
                        <ul class="sf-menu">
                            <li>
                                <a href="http://www.facebook.com/amilio.de">
                                    <img src="/images/facebook.png">
                                </a>
                            </li>
                            <li>
                                <a href="http://www.twitter.com/amilio_de">
                                    <img src="/images/twitter.png">
                                </a>                                                    
                            </li>
                            <li>
                                <a onclick="showNewChannelModal()" href="#">Starte einen Kanal</a>              
                            </li>
                            <li class="top_level_menu user">
  		 	              <a href="#"><span class="username"></span></a>
                                      <ul> 
                                          <li><a href="{{ path('amilio_core_channel_list') }}">Meine Kan&auml;le</a></li>
                                          <li><a href="{{ path('fos_user_security_logout') }}">Abmelden</a></li>
                                      </ul>
			    <li>
                            <li class="top_level_menu anonymous">
                                      <a class="simple_link" href="#">Anmelden</a>
                                      <ul id="menu_login"> 
                                          <li>
                                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                              <label>Username</label><br />
                                              <input type="text" name="_username" required="required" />
                                              <br />  
                                              <label>Passwort</label><br>
                                              <input type="password" name="_password" required="required" />
                                              <br />
                                               <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                                              <button type="submit">Anmelden</button>
                                            </form>
                                        </li>
                                        <li>
                                            <a href="{{ path("fos_user_registration_register") }}">Registrieren.</a>
                                        </li>
                                    </ul>
                                  </div>
                            </li>
                        </ul>
                    </div>       
                </div>
            </div>
            
        </header>
        <div id="newChannelModal" style="display: none; background-color: white; width: 500px; border: 1px solid #000; padding: 30px; position: relative; top: -300px"></div>
        
        <script>
          function showNewChannelModal()
          {
        	  $.get( "{{ path('amilio_core_channel_new') }}", function( data ) {
        		  $("#newChannelModal").modal({ opacity:80, overlayCss: {backgroundColor:"#000"}});
        		  $("#newChannelModal").html( data );
        	  });    	 
          }
        </script>
        
        
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

	<div style="padding-top: 35px">
        {% block body %}
        {% endblock body %}
	</div> 

        <script>
        	jQuery(document).ready(function() {
        		jQuery('ul.sf-menu').superfish();
        	});
        </script>
    </body>
    
</html>
