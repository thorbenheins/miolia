<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        {% block css %}
            <link href='/css/amilio.css' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'>      
            <link href='http://fonts.googleapis.com/css?family=Abel:400,700' rel='stylesheet' type='text/css'>      
            <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>  
            <link href='/css/menu.css' rel="stylesheet" media="screen">  
            
            {% stylesheets  '@AmilioUserBundle/Resources/public/css/*' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets  %}      
        {% endblock %}
        
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            {% javascripts 'js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
                        
            {% javascripts '@AmilioUserBundle/Resources/public/js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}                        
            
            <script src="/includes/superfish/js/superfish.js"></script> 
            <script src="/includes/simplemodal/jquery.simplemodal.1.4.4.min.js"></script>
            <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
            <script type="text/javascript">stLight.options({publisher: "0a8d16ba-5656-4348-8127-fc28018c5509", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
        {% endblock %}

 
        <title>{% block title %}amilio.de{% endblock title %}</title>
    </head>
    <body>
        <div id="newChannelModal" style="display: none; background-color: white; width: 500px; border: 1px solid #000; padding: 30px; position: relative; top: -300px"></div>
        
        <div id="confirm" style="z-index: 3; display: none; background-color: white; padding: 30px;">
            <p style="padding-bottom: 20px">Wollen Sie dieses Element wirklich l&ouml;schen?</p>
            <button style="margin-right: 10px;" onclick="modalConfirmFunction(); $.modal.close();">Ja</button><button class="simplemodal-close">Nein</button>
        </div>
        
        <script type="text/javascript">
           var modalConfirmFunction;
        
           function confirm(callback) {
        	   modalConfirmFunction = callback; 
          	   $("#confirm").modal({ opacity:80, overlayCss: {backgroundColor:"#000"}});
           }
        </script>
        
        {% include 'header.html.twig' %}
        
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

    	<div style="padding-top: 35px">
            {% block body %}
            {% endblock body %}
    	</div> 

    </body>
    
</html>