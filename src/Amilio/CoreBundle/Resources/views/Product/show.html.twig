{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ product.name }}</h1>
  <a href="{{ product.url }}" target="_blank">--> zum Shop</a> <br /> <br />
  {{ product.description }}

 <h2>In eigenen Kanal &uuml;bernehmen</h2>
 <a href="{{ path('amilio_core_product_share', {'product': product.id}) }}">add</a>  
  
<h2>In folgenden Kan&auml;len vorhanden</h2> 

<ul>
    {% for channel in channels %}
        <li><a href="{{ path('amilio_core_channel_show', {'channel': channel.id, 'canonicalName': channel.canonicalname}) }}">{{ channel.name }}</a></li>
    {% endfor %}
</ul>

    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'amilio-de'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
