{% extends 'base.html.twig' %}

{% block title %}{{ channel.name }}{% endblock %}

{% block body %}
    <h1>Kanal {{ channel.name }} von {{ owner.username }} </h1>
    Beschreibung: {{ channel.description }}
    
    
    
    <h2>Produkte</h2>
    
    <a href="{{ path("amilio_core_product_new", {'channelId': channel.id }) }}">Produkt hinzuf&uuml;gen</a>

    <br /><br />
    
    {% for product in products %}
      <a href="{{ path("amilio_core_product_show", {'productid': product.id })  }}">{{ product.name }}</a> <br />
    {% endfor %}
{% endblock %}