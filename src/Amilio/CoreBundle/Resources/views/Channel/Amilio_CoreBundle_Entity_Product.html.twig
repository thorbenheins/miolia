<div class="item" onmouseover="$('#product_{{ item.id }}').show()" onmouseout="$('#product_{{ item.id }}').hide()">
    <div style="position: relative; height: 0; top: 80px; display: none" id="product_{{ item.id }}">
        <div style="width: 145px; text-align: center; background-color: #f69a2f; padding: 10px; margin-right: 10px; margin-left: 10px; font-size: 14px; color: white;"><a onclick="showProductModal('{{ element.id }}', '{{ item.canonicalName }}')" href="#" style="color: white">zur Produktseite</a></div> 
        <div style="height: 5px;"></div>
        <div style="width: 100px; text-align: center; background-color: #ea691b; padding: 10px; margin-left: 30px; margin-right: 10px; font-size: 12px; color: white;"><a href="{{ item.url }}" target="_blank" style="color: white">direkt zum Shop</a></div>
        <div style="height: 5px;"></div>
        <div class="user-{{ channel.owner.id }}" style="width: 100px; text-align: center; background-color: #444444; padding: 10px; margin-left: 30px; margin-right: 10px; font-size: 12px; color: white;"><a href="{{ path('amilio_core_product_remove', { 'channelElement': element.id, 'channel': channel.id}) }}" style="color: white">Produkt entfernen</a></div>
    </div>
    <div class="image">
        <img src="{{ item.image }}">
    </div>    
    <div class="title">
         {{ item.name }}
    </div>
</div>