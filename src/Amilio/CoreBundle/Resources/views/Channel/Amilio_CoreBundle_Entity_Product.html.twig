<div class="item" onmouseover="$('#product_{{ element.id }}').show()" onmouseout="$('#product_{{ element.id }}').hide()">
    <div style="position: relative; height: 0; top: 80px; display: none" id="product_{{ element.id }}">
    
        <div style="width: 145px; text-align: center; background-color: #f69a2f; padding: 10px; margin-right: 10px; margin-left: 25px; font-size: 14px; color: white;"><a onclick="showProductModal('{{ item.id }}', '{{ item.canonicalName }}')" href="#" style="color: white">zur Produktseite</a></div> 
        <div style="height: 5px;"></div>
        <div style="width: 100px; text-align: center; background-color: #ea691b; padding: 10px; margin-left: 45px; margin-right: 10px; font-size: 12px; color: white;"><a href="{{ item.url }}" target="_blank" style="color: white">direkt zum Shop</a></div>
        <div style="height: 5px;"></div>
        <div class="user-{{ channel.owner.id }}" style="width: 100px; text-align: center; background-color: #444444; padding: 10px; margin-left: 45px; margin-right: 10px; font-size: 12px; color: white;"><a href="javascript: confirmElementRemove({{element.id}})" style="color: white">Produkt entfernen</a></div>
    
    </div>
    <div class="image">
        <img src="{{ item.image }}">
    </div>    
    <div class="title">
         {{ item.name }}
    </div>
</div>
